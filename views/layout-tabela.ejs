<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="pt-br">
<head>
	<%- include("cabecalho") %>

	<%- defineContent("styles") %>
</head>
<body>
	<div id="wrapper">

		<%- include("sidebar") %>

		<div id="content-wrapper" class="d-flex flex-column">

			<div id="content">

				<%- include("topbar") %>

				<div class="container-fluid">

					<h1 class="mb-4 text-gray-800"><%=((typeof titulo === "undefined" || !titulo) ? "ESPM ComfyUI" : titulo) %></h1>

					<%- defineContent("topcontent") %>

					<% if (typeof textoSubmit !== "undefined" && textoSubmit) { %>
					<form class="card shadow mb-4" id="form">
					<% } else { %>
					<div class="card shadow mb-4">
					<% } %>
						<%- defineContent("cardheader") %>
						<div class="card-body px-0">

							<%- body %>

						</div>

						<div class="card-footer">
							<div class="row align-items-center">
								<% if (typeof textoSubmit !== "undefined" && textoSubmit) { %>
								<div class="col-md-6 text-center text-md-left pb-3 pb-md-0">
									<button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> <%=textoSubmit %></button>
								</div>
								<div class="col-md-6 text-center text-md-right">
								<% } else { %>
								<div class="col-md-6 offset-md-6 text-center text-md-right">
								<% } %>
									<button type="button" class="btn btn-light" onclick="if (window.history.length > 1) { window.history.back(); } else { window.close() }">Voltar</button>
								</div>
							</div>
						</div>
					<% if (typeof textoSubmit !== "undefined" && textoSubmit) { %>
					</form>
					<% } else { %>
					</div>
					<% } %>

				</div>

			</div>

			<%- include("footer") %>
		</div>

	</div>

	<%- include("rodape") %>

	<%- defineContent("scripts") %>
</body>
</html>
